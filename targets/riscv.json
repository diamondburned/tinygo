{
    "llvm-target": "riscv32--none",
	"goos": "linux",
	"goarch": "arm",
    "build-tags": ["tinygo.riscv", "linux", "arm"],
	"gc": "marksweep",
	"compiler": "clang",
	"linker": "ld.lld",
	"cflags": [
		"--target=riscv32--none",
		"-Oz",
		"-Werror",
		"-Qunused-arguments",
		"-nostdlibinc",
		"-fno-exceptions", "-fno-unwind-tables",
		"-ffunction-sections", "-fdata-sections"
	],
	"ldflags": [
		"--gc-sections"
	],
	"extra-files": [
		"src/device/riscv/start.S"
    ]
}